---
import "@/styles/global.css";
import { reportModifiedTime } from "@/utils.ts";

interface Props {
    pagePath: string;
}

const pagePath = Astro.props.pagePath;
const pageModifiedDate = reportModifiedTime(pagePath);
---

<!doctype html>
<html class="font-comic" lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <slot />
        {pageModifiedDate}
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
